{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "requireBranch": "main"
  },
  "hooks": {
    "before:init": [
      "git pull",
      "npm run lint"
    ],
    "after:bump": "npx auto-changelog -p"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  }
}