{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "requireBranch": "main",
    "push": true,
    "tagName": "${version}"
  },
  "hooks": {
    "before:init": [
      "git pull",
      "npm run lint"
    ],
    "after:bump": [
      "npm run build",
      "npx auto-changelog --package"
    ]
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "releaseNotes": "npx auto-changelog --latest",
    "tokenRef": "GITHUB_TOKEN"
  },
  "npm": {
    "publish": true,
    "ignoreVersion": false,
    "skipChecks": true,
    "registry": "https://registry.npmjs.org/",
    "tokenRef": "NPM_TOKEN"
  }
}