{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "requireBranch": "main",
    "push": true,
    "tagName": "v${version}"
  },
  "hooks": {
    "before:init": [
      "git pull",
      "npm run lint"
    ],
    "after:bump": [
      "npm run build",
      "npx auto-changelog --package"
    ]
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}",
    "releaseNotes": "cat CHANGELOG.md | sed -n \"/^## \\[${version}\\]/,/^## /p\" | sed \"$ d\""
  },
  "npm": {
    "publish": true
  }
}