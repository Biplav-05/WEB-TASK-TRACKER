{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "requireBranch": "main",
    "push": true,
    "tagName": "v${version}"
  },
  "hooks": {
    "before:init": [
      "git pull",
      "npm run lint"
    ],
    "after:bump": [
      "npm run build"
    ],
    "after:release": [
      "echo 'Releasing version ${version}'"
    ]
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "releaseNotes": "npx auto-changelog --package",
    "tokenRef": "TOKEN_GITHUB"
  },
  "npm": {
    "publish": true,
    "ignoreVersion": false,
    "skipChecks": true,
    "registry": "https://registry.npmjs.org/",
    "tokenRef": "NPM_TOKEN"
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "package.json",
      "out": "package.json",
      "bump": "conventional",
      "key": "version"
    }
  }
}