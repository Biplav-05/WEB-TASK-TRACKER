{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "requireBranch": "main",
    "push": true,
    "tagName": "${version}"
  },
  "hooks": {
    "before:init": [
      "git pull",
      "npm run lint"
    ],
    "after:bump": [
      "npm run build",
      "npx auto-changelog --package"
    ]
  },
  "github": {
    "release": true,
    "releaseName": "V${version}",
    "releaseNotes": "npx auto-changelog --latest",
    "tokenRef": "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"
  },
  "npm": {
    "publish": true
  }
}